<% if square.has_been_visited? %>
  <% bg_class = "bg-red-200" %>
<% elsif odds.include?(index) %>
  <% bg_class = index.even? ? "bg-slate-100" : "bg-slate-500" %>
<% else %>
  <% bg_class = index.odd? ? "bg-slate-100" : "bg-slate-500" %>
<% end %>

